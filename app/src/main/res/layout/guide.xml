<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical"
        android:weightSum="667">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="547"
            android:weightSum="547">
        <LinearLayout
            android:background="#7F000000"
            android:layout_weight="30.5"
            android:layout_width="match_parent"
            android:layout_height="0px">
        </LinearLayout>
        <LinearLayout
            android:background="#7F000000"
            android:id="@+id/stop"
            android:layout_weight="32"
            android:layout_width="match_parent"
            android:weightSum="375"
            android:layout_height="0px">
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="4.25"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="32"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="12.25"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="44">
                <com.pm10.library.CircleIndicator
                    android:id="@+id/circle_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    app:p_gap="12dp"
                    app:p_radius="6dp"
                    app:p_defaultColor="@color/gray"
                    app:p_selectedColor="@color/white"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="50"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="96"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="93.5"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="32">
                <ImageView
                    android:id="@+id/end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btnclose"
                    android:scaleType="fitCenter" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="11"/>
        </LinearLayout>
        <LinearLayout
            android:background="#7F000000"
            android:layout_weight="68.5"
            android:layout_width="match_parent"
            android:layout_height="0px"/>
        <LinearLayout
            android:background="#7F000000"
            android:weightSum="375"
            android:layout_weight="38"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <LinearLayout
                android:layout_weight="147.5"
                android:layout_width="0px"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="80"
                android:layout_width="0px"
                android:layout_height="match_parent">
            </LinearLayout>
            <LinearLayout
                android:layout_weight="147.5"
                android:layout_width="0px"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="378"
            android:background="#7F000000" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/guide_bottom"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="120"
            android:background="#00000000"/>
        </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" />
</FrameLayout>
