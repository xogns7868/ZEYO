<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/dra_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="760">
        <LinearLayout
            android:layout_weight="86"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <include
                layout="@layout/toolbar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="39"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>

        <LinearLayout
            android:layout_weight="172"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="360">
            <LinearLayout
                android:layout_weight="20"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="329"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_sample"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="77"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="360">
                <LinearLayout
                    android:layout_weight="52"
                    android:layout_width="0px"
                    android:layout_height="match_parent"></LinearLayout>
                <LinearLayout
                    android:layout_weight="77"
                    android:layout_width="0px"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btn_ruler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:background="@drawable/ic_ruler_blue"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="103"
                    android:layout_width="0px"
                    android:layout_height="match_parent"></LinearLayout>
                <LinearLayout
                    android:layout_weight="77"
                    android:layout_width="0px"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btn_clothes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_clothes_gray" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="17"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="19"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="360">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="23"></LinearLayout>
            <LinearLayout
                android:layout_weight="134"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="측정"
                    android:textSize="16dp"
                    android:textColor="#1048ff"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="45"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="134"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="내 옷장"
                    android:textSize="16dp"
                    android:textColor="#777777"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
    <include
        layout="@layout/activity_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>