<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/dra_layout">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="730">
        <LinearLayout
            android:layout_weight="74.42"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <include
                layout="@layout/toolbar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375"
            android:background="@drawable/underline">
            <include layout="@layout/in_back_arrow"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="36"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="17"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="299"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textview_question_explanation1"
                    android:includeFontPadding="false"
                    android:textColor="#1d1d1d"
                    android:textSize="14dp"
                    android:text="궁금하거나 불편한 점이 있으신가요?"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="35"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="299"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="아래 양식을 작성해주시면 빠른 시일 내에 확인하여\n연락드리겠습니다."
                    android:id="@+id/textview_question_explanation2"
                    android:includeFontPadding="false"
                    android:textSize="14dp"
                    android:textColor="#1d1d1d"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="22"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="307"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#777777"
                    android:textSize="12dp"
                    android:id="@+id/textview_question_explanation3"
                    android:includeFontPadding="false"
                    android:text="이메일"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="315"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="315"
                android:background="@drawable/underline">
                <LinearLayout
                    android:layout_weight="6"
                    android:layout_width="0px"
                    android:layout_height="match_parent"></LinearLayout>
                <LinearLayout
                    android:layout_weight="301"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="40">
                    <LinearLayout
                        android:layout_weight="10"
                        android:layout_width="match_parent"
                        android:layout_height="0px"></LinearLayout>
                    <LinearLayout
                        android:layout_weight="17"
                        android:layout_width="match_parent"
                        android:layout_height="0px">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="답변 받을 이메일을 입력해주세요"
                            android:background="#00ff0000"
                            android:textSize="14dp"
                            android:includeFontPadding="false"
                            android:id="@+id/edt_question_email"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="307"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:textColor="#777777"
                    android:textSize="12dp"
                    android:id="@+id/textview_question_explanation4"
                    android:text="연락처"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="315"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="315"
                android:background="@drawable/underline">
                <LinearLayout
                    android:layout_weight="6"
                    android:layout_width="0px"
                    android:layout_height="match_parent"></LinearLayout>
                <LinearLayout
                    android:layout_weight="301"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="40">
                    <LinearLayout
                        android:layout_weight="10"
                        android:layout_width="match_parent"
                        android:layout_height="0px"></LinearLayout>
                    <LinearLayout
                        android:layout_weight="17"
                        android:layout_width="match_parent"
                        android:layout_height="0px">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="연락처를 입력해 주세요"
                            android:background="#00ff0000"
                            android:textSize="14dp"
                            android:includeFontPadding="false"
                            android:maxLength="11"
                            android:id="@+id/edt_question_phone"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="307"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:id="@+id/textview_question_explanation5"
                    android:textColor="#777777"
                    android:textSize="12dp"
                    android:text="문의 내용"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="315"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="315"
                android:background="@drawable/underline">
                <LinearLayout
                    android:layout_weight="6"
                    android:layout_width="0px"
                    android:layout_height="match_parent"></LinearLayout>
                <LinearLayout
                    android:layout_weight="301"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="40">
                    <LinearLayout
                        android:layout_weight="10"
                        android:layout_width="match_parent"
                        android:layout_height="0px"></LinearLayout>
                    <LinearLayout
                        android:layout_weight="17"
                        android:layout_width="match_parent"
                        android:layout_height="0px">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="제목(20자 이내)"
                            android:background="#00ff0000"
                            android:includeFontPadding="false"
                            android:textSize="14dp"
                            android:maxLength="20"
                            android:id="@+id/edt_title"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="12"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="130"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="315"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:orientation="vertical"
                android:weightSum="130">
                <LinearLayout
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:layout_height="0px"></LinearLayout>
                <LinearLayout
                    android:layout_weight="112"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:orientation="horizontal"
                    android:weightSum="315">
                    <LinearLayout
                        android:layout_weight="10"
                        android:layout_width="0px"
                        android:layout_height="match_parent"></LinearLayout>
                    <LinearLayout
                        android:layout_weight="295"
                        android:layout_width="0px"
                        android:layout_height="match_parent">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:includeFontPadding="false"
                            android:hint="문의 내용을 입력해주세요.(500자 이내)"
                            android:background="#00ff0000"
                            android:textSize="14dp"
                            android:gravity="top"
                            android:maxLength="500"
                            android:id="@+id/edt_content"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="30"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="16"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="343"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_signup"
                    android:textSize="16dp"
                    android:text="문의하기"
                    android:textColor="#ffffff"
                    android:id="@+id/btn_question_success"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include
        layout="@layout/activity_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>