<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/dra_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="0.068"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <include
                layout="@layout/toolbar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.058">
            <ImageButton
                android:id="@+id/back_btn"
                android:background="@drawable/ic_back_arrow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.034"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.197"
                android:textSize="16dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:text="측정 정보 입력"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.144"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.030"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.140">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.030"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1401">
            <ImageView
                android:id="@+id/addclothpicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/addclothpicure"/>
                <ImageButton
                    android:id="@+id/add_cloth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="#00000000"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.0161"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1551"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_cloth_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.015"
                    android:includeFontPadding="false"
                    android:textSize="12dp"
                    android:text="옷 이름"
                    android:textColor="#777777"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.007"/>
                <EditText
                    android:id="@+id/cloth_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.040"
                    android:hint="ex) 빨간 스웨터"
                    android:includeFontPadding="false"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:textColor="#1d1d1d"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.016"/>
                <TextView
                    android:id="@+id/txt_cloth_category"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.015"
                    android:textSize="12dp"
                    android:includeFontPadding="false"
                    android:text="옷 카테고리"
                    android:textColor="#777777"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.007"/>
                <Spinner
                    android:id="@+id/spinner_select_category"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/underline"
                    android:layout_height="0dp"
                    android:layout_weight="0.040"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.038"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.024"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.240">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.030"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.312">
            <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/image_body"
                android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/start_measure_image_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.033"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.033"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.050">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.0165"/>
            <Button
                android:id="@+id/start_measure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3427"
                android:background="@drawable/rectangle_signup"
                android:text="측정 시작하기"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.0158"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.032"/>
    </LinearLayout>
    <include
        android:id="@+id/navi"
        layout="@layout/activity_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>