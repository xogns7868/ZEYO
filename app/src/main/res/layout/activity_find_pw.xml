<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/dra_layout">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="667">
        <LinearLayout
            android:layout_weight="68"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <include
                layout="@layout/toolbar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <include layout="@layout/in_back_arrow"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="36"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="300"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="이메일"
                    android:textSize="12dp"
                    android:textColor="#777777"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
        android:layout_weight="40"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="horizontal"
        android:weightSum="375">
        <LinearLayout
            android:layout_weight="30"
            android:layout_width="0px"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:layout_weight="314.9"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="314.9"
            android:background="@drawable/underline">
            <LinearLayout
                android:layout_weight="6"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="292.8"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="40">
                <LinearLayout
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="0px"></LinearLayout>
                <LinearLayout
                    android:layout_weight="17"
                    android:layout_width="match_parent"
                    android:layout_height="0px">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00ff0000"
                        android:hint="이메일을 입력해주세요"
                        android:textColor="#777777"
                        android:textSize="14dp"
                        android:id="@+id/edt_find_pw_email"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="300"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="아이디"
                    android:textSize="12dp"
                    android:textColor="#777777"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="314.9"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="314.9"
                android:background="@drawable/underline">
                <LinearLayout
                    android:layout_weight="6"
                    android:layout_width="0px"
                    android:layout_height="match_parent"></LinearLayout>
                <LinearLayout
                    android:layout_weight="292.8"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="40">
                    <LinearLayout
                        android:layout_weight="10"
                        android:layout_width="match_parent"
                        android:layout_height="0px"></LinearLayout>
                    <LinearLayout
                        android:layout_weight="17"
                        android:layout_width="match_parent"
                        android:layout_height="0px">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00ff0000"
                            android:hint="아이디를 입력해주세요"
                            android:textColor="#777777"
                            android:textSize="14dp"
                            android:id="@+id/edt_find_pw_id"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_weight="300"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="16.3"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="343"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_signup"
                    android:text="비밀번호 찾기"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:id="@+id/btn_find_pw_success"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include
        layout="@layout/activity_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>