<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cameraguidecaution"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="667">
        <LinearLayout
            android:layout_weight="30.5"
            android:layout_width="wrap_content"
            android:layout_height="0px">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stop"
            android:layout_weight="32"
            android:layout_width="match_parent"
            android:weightSum="375"
            android:layout_height="0px">
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="7"/>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="26.5">
                <ImageButton
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="15"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="44">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <com.pm10.library.CircleIndicator
                    android:id="@+id/circle_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    app:p_gap="12dp"
                    app:p_radius="6dp"
                    app:p_defaultColor="@color/gray"
                    app:p_selectedColor="@color/white"
                    android:scaleType="fitCenter"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="50"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="96">
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="93.5"/>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_weight="32">
                <FrameLayout
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn_end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:scaleType="fitCenter" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="11"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="68.5"
            android:layout_width="match_parent"
            android:layout_height="0px">
        </LinearLayout>
        <LinearLayout
            android:weightSum="375"
            android:layout_weight="38"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <LinearLayout
                android:layout_weight="147.5"
                android:layout_width="0px"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="80"
                android:layout_width="0px"
                android:layout_height="match_parent">
            </LinearLayout>
            <LinearLayout
                android:layout_weight="147.5"
                android:layout_width="0px"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="335"
            android:layout_width="match_parent"
            android:layout_height="0px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15">
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:weightSum="375">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"/>
            <CheckBox
                android:buttonTint="#46b817"
                android:id="@+id/guide_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:text="다시보지 않기"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:weightSum="375">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="55"/>
            <Button
                android:id="@+id/guide_ok"
                android:layout_width="0dp"
                android:layout_weight="275"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:text="알겠습니다!"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55"></LinearLayout>
    </LinearLayout>
</FrameLayout>