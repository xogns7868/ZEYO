<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/dra_layout">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="667">
        <LinearLayout
            android:layout_weight="68"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <include
                layout="@layout/toolbar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="67"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="33"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="16"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="343"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#1d1d1d"
                    android:textSize="28dp"
                    android:text="이메일 전송완료!"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="30"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="315"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="입력하신 메일로\n비밀번호 재설정 링크를 발송하였습니다."
                    android:textSize="16dp"
                    android:textColor="#1d1d1d"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="315"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="50"
                android:background="@drawable/rectangle_gray">
                <LinearLayout
                    android:layout_weight="16"
                    android:layout_width="match_parent"
                    android:layout_height="0px"></LinearLayout>
                <LinearLayout
                    android:layout_weight="17"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:orientation="horizontal"
                    android:weightSum="315">
                    <LinearLayout
                        android:layout_weight="8"
                        android:layout_width="0px"
                        android:layout_height="match_parent"></LinearLayout>
                    <LinearLayout
                        android:layout_weight="299"
                        android:layout_width="0px"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="hon*****@gmail.com"
                            android:gravity="center"
                            android:textColor="#1d1d1d"
                            android:textSize="14dp"
                            android:id="@+id/txt_find_pw_email"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="261"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="16.3"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="343"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_signup"
                    android:text="확인"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:id="@+id/btn_find_pw_success_success"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <include
        layout="@layout/activity_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>