<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/dra_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="667">
        <LinearLayout
            android:layout_weight="68"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <include
                layout="@layout/toolbar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <include layout="@layout/in_back_arrow"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="38"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>

        <LinearLayout
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="315"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#1d1d1d"
                    android:text="홍길동/1989년 1월 1일/남성으로\n찾은 아이디 입니다."
                    android:id="@+id/txt_find_id_result"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="120"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="29dp"
                    android:paddingRight="29dp"
                    android:id="@+id/layout_find_id_result"></LinearLayout>
            </ScrollView>


        </LinearLayout>
        
        <LinearLayout
            android:layout_weight="32"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14dp"
                android:textColor="#777777"
                android:gravity="center"
                android:text="동명이인의 아이디가 검색될 수 있습니다."/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="개인정보 보호를 위해 아이디는 8자로,\n일부는 *로 표기됩니다."
                android:textColor="#777777"
                android:textSize="14dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="143"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="horizontal"
            android:weightSum="375">
            <LinearLayout
                android:layout_weight="42"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="139.6"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_rectangle_blue"
                    android:text="비밀번호 찾기"
                    android:textSize="16dp"
                    android:textColor="#1048ff"
                    android:id="@+id/btn_find_pw"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="12.4"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="139.6"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_signup"
                    android:text="로그인"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:id="@+id/btn_find_id_result_login"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <include
        layout="@layout/activity_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>